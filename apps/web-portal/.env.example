# Investment Platform Web Portal Environment Variables

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# API Service URLs
API_BASE_URL=http://localhost:3001
PORTFOLIO_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_URL=http://localhost:3002
MARKET_DATA_SERVICE_URL=http://localhost:3003

# Database Configuration (if needed for session storage)
DATABASE_URL=postgresql://username:password@localhost:5432/investment_platform

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_MESSAGING=true
ENABLE_REPORTS=true
ENABLE_ANALYTICS=true

# White Label Configuration
BRAND_NAME=Investment Platform
BRAND_LOGO_URL=/assets/logo.png
BRAND_FAVICON_URL=/assets/favicon.ico
PRIMARY_COLOR=#1976d2
SECONDARY_COLOR=#424242

# Security Configuration
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your-csrf-secret-here

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
ENABLE_CACHE=true
CACHE_TTL=300