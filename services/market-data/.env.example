# Market Data Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3002
LOG_LEVEL=info
LOG_QUERIES=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/investment_platform_market_data

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Kafka Configuration (if using message broker)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=market-data-service

# Market Data Vendor APIs
# Bloomberg API
BLOOMBERG_API_KEY=your-bloomberg-api-key
BLOOMBERG_BASE_URL=https://api.bloomberg.com

# Alpha Vantage API (free tier available)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co

# IEX Cloud API (free tier available)
IEX_API_KEY=your-iex-api-key
IEX_BASE_URL=https://cloud.iexapis.com

# Finnhub API (free tier available)
FINNHUB_API_KEY=your-finnhub-api-key
FINNHUB_BASE_URL=https://finnhub.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Cache Settings
CACHE_TTL_QUOTES=30
CACHE_TTL_HISTORICAL=3600
CACHE_TTL_SECURITIES=86400